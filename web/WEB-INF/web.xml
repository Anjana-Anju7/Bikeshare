    <servlet>
        <servlet-name>CreateAccount</servlet-name>
        <servlet-class>main.CreateAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginUser</servlet-name>
        <servlet-class>main.LoginUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>main.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBike</servlet-name>
